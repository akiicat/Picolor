<div id='left-bar' class='col-lg-8'>
  <button id="clickable">Click me to select files</button>
  <div id='dropzone' class=''>
    <div class="fallback">
      <input id='myFile' name='file' type='image' multiple/>
    </div>

    <div id='dz-upload'>
      <%= image_tag('cloud-storage-uploading-option.svg', class: 'dz-preloader') %>
    </div>

    <div id='dz-canvas'></div>

    <div id='dz-preview' class='dz-preview'>
      <%= image_tag('preloader.svg', class: 'dz-preloader') %>
    </div>
  </div>
</div>
<div id='right-bar' class='col-lg-4 right-bar'>
  <div>add card</div>

  <div id='rb-images' class='rb-container'>
    <% JSON.parse(@pallet.image_url).each_with_index do |url, index| %>
      <div id="image-<%= index %>" class='card-image card-small' data-id="<%= index %>" data-url="<%= url %>">
      </div>
    <% end %>
  </div>

  <div id='rb-colors' class='rb-container'>
    <% @pallet.colors.split(" ").each do |color_hex| %>
      <div class='row' style="height: 100px; background-color: <%= color_hex %>;">
      </div>
    <% end %>
  </div>
</div>

<%= render 'form', pallet: @pallet %>

<%= link_to 'Show', @pallet %> |
<%= link_to 'Back', pallets_path %>
