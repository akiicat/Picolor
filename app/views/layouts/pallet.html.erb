<!DOCTYPE html>
<html>
  <head>
    <title>Picolor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'pallet', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </button>
          <a class="navbar-brand" href="#">Picolor</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <a href="#">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              </a>
            </li>
            <li>
              <%= link_to edit_pallet_path do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= render 'painters/menu/registration_items' %>
            </li>
            <li>
              <%= render 'painters/menu/login_items' %>
            </li>
          </ul>
        </div>
      </div>
    </div>


    <%= yield %>


    <hr/>
    <div>reserve</div>
    <p>Database: <% ActiveRecord::Base.configurations %> </p>
    <span class="btn-group" role="group" aria-label="...">
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
      </button>
      <button type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </button>
    </span>
    <span> <%= render 'painters/menu/registration_items' %> </span>
    <span> <%= render 'painters/menu/login_items' %> </span>
    pallet
  </body>
</html>
